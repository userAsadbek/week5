#include <iostream>
#include <string>
#include <vector>
using namespace std;

void target(int *arr,int size, int target) {
   int *s=arr;


    for(int i=0;i<size-1;i++) {
        int *z= arr + i + 1;
        for(int j=i+1;j<size;j++) {
          if (*(s)+*(z)==target) {
            cout<<*(s)<<"∂∂ "<< *(z)<<endl;
          }
            z++;
        }
     s++;}
}
void swap(int *a, int *b,int *c) {
    int temp = *a;
    *a = *b;
    *b = *c;
    *c = temp;
}
void BubbleSort(int arr[], int n) {
    int temp;
    bool swap;
    do {
        swap = false;
        for (int i = 1; i < n; i++) {
            if (arr[i] > arr[i - 1]) {
                temp=arr[i];
                arr[i] = arr[i - 1];
                arr[i - 1] = temp;
                swap = true;
            }
        }
    }
    while (swap);
}
void BubbleSort12(vector <int> &arr) {
    int temp;
    bool swap;
    int n=arr.size();
    do {
        swap = false;
        for (int i = 1; i <n; i++) {
            if (arr[i] > arr[i - 1]) {
                temp=arr[i];
                arr[i] = arr[i - 1];
                arr[i - 1] = temp;
                swap = true;
            }
        }
        n--;
    }
    while (swap);
}
void BubbleSort2(int arr[], int n) {
    int temp;
    bool swap;
    do {
        swap=false;
        for (int i = 1; i < n; i++) {
            if (arr[i] < arr[i - 1]) {
                temp=arr[i];
                arr[i] = arr[i - 1];
                arr[i - 1] = temp;
                swap = true;
            }
        }
    }
   while (swap);
}
int Sum(int *arr,int n,int k) {
    int total=0;
    for (int i=0;i<n;i+=k) {
        total+=*(arr+i);
    }
    return total;

}

void removeSpaces(char *str) {
    char *read = str;
    char *write = str;

    while (*read != '\0') {
        if (*read != ' ') {
            *write = *read;
            write++;
        }
        read++;
    }
    *write = '\0';
}

