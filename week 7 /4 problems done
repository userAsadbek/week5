void withdraw() {
    double withdrawl;
    cout<<"Enter withdraw amount:"<<endl;
    cin>>withdrawl;
    if (withdrawl>initial) {
        cout<<"The amount of money you want take not available in balance\n";
    }
    else {
        initial-=withdrawl;
    }
}
void balance() {
    cout<<initial<<endl;
}
void deposit() {
    double deposit;
    cout<<"Enter deposit";
    cin>>deposit;
  initial+=deposit;
}
