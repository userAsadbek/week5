void fee() {
    cout<<"Enter numbers of hours stayed in parking";
    int hours;
    cin>>hours;
    if (hours<=2) {
        cout<<"FREE parking\n ";
    }
    else if (hours>2 && hours<=5) {
        int cost=2;
        cout<<"Cost is "<<cost*hours<<endl;
    }
        else if (hours>5) {
            int cost=6;
            cout<<"Cost is "<<cost*hours<<endl;
        }
    }
