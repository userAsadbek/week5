#include <iostream>
#include <cmath>
using namespace std;
int power(int a,int b) {
    if (b==0) return 1;
    return a*power(a,b-1);
}
int reverse(int a,int b=0) {
    if (a==0) return b;
    return reverse(a/10,b*10+a%10);
}
bool isPalin(int x) {
    if (x<0) return false;
    return x==reverse(x);

}
bool isPrime(int z,int a=2) {
    if (z<=1) return false;
    if (z==2) return true;
    if (z%a==0) return false;
    if (a*a>z) return true;
    return isPrime(z,a+1);
}
int countDigits(int x) {
    if (x==0) return 0;
    if (x<0) x=-x;
    if (x<10) return 1;
    return 1+countDigits(x/10);
}
int productdigits(int x) {
    if (x==0) return 1;
    return (x%10)*productdigits(x/10);
}
bool powerofTwo(int x) {
    if (x<=0) return false;
    if (x==1) return true;
    if (x%2!=0) return false;
    return powerofTwo(x/2);
}

bool isIncrease(int x, int prevDigit = -1) {
    if (x == 0) return true;
    int currentDigit = x % 10;
    if (currentDigit >= prevDigit) return false;
    return isIncrease(x / 10, currentDigit);
}
int zero(int x) {
    if (x==0) return 0;
    if (x%10==0)  return 1+zero(x/10);
    return 0+zero(x/10);
}
int powerm(int a,int b) {
    if (b==0) return 1;
    if (b%2==0) {
        int half=powerm(a,b/2)*powerm(a,b/21);
     return half*half;}
    return a*powerm(a,b-1);
}
