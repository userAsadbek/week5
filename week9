  int Prime1;
    cout<<"Enter number and 1 for it is prime and 0 it is not";
    cin>>Prime1;
    cout<<"NUM IS "<<isPrime(Prime1)<<endl; // fourth problem
   cout<<endl;

      int num;
    cout<<"TO COUNT DIGITS ENTER NUM";
