void swap(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}
int findMax(int *arr,int size)
{
    int max=*arr;
    {
        for(int i=0;i<size;i++)
        {
            if(max<*(arr+i)) max=*(arr+i);
        }
        return max;
    }
}
int* max(int arr[],int size)
{
    int *max=arr;
    for(int i=1;i<size;i++)
    {
        if(*max<arr[i]) max=&arr[i];
    }

 return max;
}
float ave(int *arr,int size)
{
    float ave=0;
    for(int i=0;i<size;i++){
        ave+=*(arr+i);}
    return  ave=ave/size;}
