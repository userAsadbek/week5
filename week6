void even(int n) {
    cout<<"even digits: ";
    if (n<0)
        n=-n;
    if (n==0)
        cout<<0<<" ";
    while (n>0) {
        int digit=n%10;
        if ( digit%2==0)
            cout<<digit<<" ";
        n=n/10;
    }

    cout<<endl;
}
void print(char ch1,char ch2,int numberperline)
{
    for (int i=97;i<=122;i++) {
        cout<<static_cast<char>(i);
        if (i%numberperline==0) {
            cout<<endl;
        }
    }
}
bool palanandrome(int num) {
    int org=num;
    int reversed=0;
    while (num>0) {
    reversed=reversed*10+num%10;
        num=num/10;

    }
    return org==reversed;
}
