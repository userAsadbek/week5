int getTrian(int n) {
     int m=0;
     for (int i=1;i<=75;i++){
         m=i*(i+1)/2;
         cout<<m<<" ";
         if (i%5==0)
             cout<<endl;
     } return m;
 }

int gcd(int a,int b) {
    while (b!=0) {
        int temp=b;
        b=a%b;
        a=temp;
    }
    return a;
}
void swap(int &a,int &b){
    int temp=a;
    a=b;
    b=temp;
    cout<<"After swapping: "<<a<<" "<<b<<endl;
}

int num(int num1,int num2) {
    return num1*num2;
}
double acceleration(double v1,double v2,double t) {
    return (v1-v2)/t;
}
double fun(double n) {
    return n*n*3.14;
}
double square(double x,double y) {
    double result=x*y;
    return result;

}
float  square(float x,float y) {
    float result=2*x+2*y;
return result;}
