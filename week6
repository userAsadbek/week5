int factorial( int n) {
    int fact=1;
    for (int i;i<=n;i++) {
        fact*=i;
    }
    return fact;
}
int max(int a,int b,int c) {
    if (a>b && a>c)
        return a;
    else if (b>c && b>a)
        return b;
    else
        return c;
}
int min(int a,int b ,int c) {
    if (a<b && a<c)
        return a;
    else if (b<c && b<a)
        return b;
    else
        return c;}
